<Window x:Class="Komax_Kaefer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Komax_Kaefer"
        mc:Ignorable="d"
        Title="Komax-Käfer" Height="900" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="StartButton" Content="Start" Width="80" Margin="0,0,10,0" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop" Width="80" Margin="0,0,10,0" Click="StopButton_Click" IsEnabled="False"/>
            <TextBlock Text="Feldgröße:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Slider x:Name="ZoomSlider" Minimum="1" Maximum="5" Value="4" Width="100" Margin="5,0,0,0" ValueChanged="ZoomSlider_ValueChanged" IsSnapToTickEnabled="True" TickFrequency="1"/>
            <TextBlock x:Name="ZoomValueText" Text="4 px" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="GridImage" Stretch="None"/>
        </ScrollViewer>
    </Grid>
</Window>
