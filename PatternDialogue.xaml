<Window x:Class="Komax_Kaefer.PatternDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pattern" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Label Content="Empty" HorizontalAlignment="Center"/>
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                    <Image x:Name="PreviewEmpty" Width="80" Height="80"/>
                </Border>
                <Button Content="Select" Click="Empty_Click" Margin="0,5,0,0"/>
            </StackPanel>
            <StackPanel Margin="10">
                <Label Content="Chessboard" HorizontalAlignment="Center"/>
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                    <Image x:Name="PreviewChessboard" Width="80" Height="80"/>
                </Border>
                <Button Content="Select" Click="Chessboard_Click" Margin="0,5,0,0"/>
            </StackPanel>
            <StackPanel Margin="10">
                <Label Content="Random" HorizontalAlignment="Center"/>
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5">
                    <Image x:Name="PreviewRandom" Width="80" Height="80"/>
                </Border>
                <Button Content="Select" Click="Random_Click" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
